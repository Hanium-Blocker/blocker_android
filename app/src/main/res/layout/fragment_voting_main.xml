<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Spinner
        android:id="@+id/voting_spinner"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
    </Spinner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/voting_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/voting_spinner">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/voting_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/voting_rv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:text="투표하기"/>

    <TextView
        android:id="@+id/voting_votedtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/voting_rv"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="이미 투표를 하셨습니다."/>



</RelativeLayout>