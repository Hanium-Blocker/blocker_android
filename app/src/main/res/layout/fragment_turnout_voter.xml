<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/turnout_voter_spinner"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
    </Spinner>


    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_below="@+id/turnout_voter_spinner"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/turnout_voter_donut_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:donut_progress="30"/>

    <Button
        android:id="@+id/turnout_voter_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@android:drawable/ic_popup_sync" />

    <Button
        android:id="@+id/test_btn_turnout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/turnout_voter_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/turnout_voter_donut_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="온라인 선거 참여 신청자 \n
        총 인원 10분 중, 2분이 투표하셨습니다."/>

</RelativeLayout>