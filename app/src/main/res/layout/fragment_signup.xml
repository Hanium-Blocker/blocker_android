<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/signup_idtext"
        android:layout_marginTop="50dp"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="ID"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>
    <EditText
        android:id="@+id/signup_id"
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="ID를 입력해주세요"
        />

    <TextView
        android:id="@+id/signup_pwtext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_idtext"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="PW"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/signup_pw"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_idtext"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="PW를 입력해주세요"
        />


    <TextView
        android:id="@+id/signup_nametext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_pwtext"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="이름"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/signup_name"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_pwtext"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="이름을 입력해주세요"
        />

    <TextView
        android:id="@+id/signup_gendertext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_nametext"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="성별"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/signup_gender"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_nametext"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="남성/여성 선택주세요"
        />

    <TextView
        android:id="@+id/signup_birthtext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_gendertext"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="생년"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/signup_birth"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_gendertext"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="생년월일 입력해주세요"
        />

    <TextView
        android:id="@+id/signup_teltext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_birthtext"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="전화"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/signup_tel"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_birthtext"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="전화번호 입력해주세요" />

    <TextView
        android:id="@+id/signup_regiontext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_teltext"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:text="지역"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/signup_region"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_teltext"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/signup_idtext"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:background="#dcdcdc"
        android:hint="지역을 입력해주세요" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/signup_region"
        android:layout_centerHorizontal="true"
        android:background="#2266dd"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:text="회원가입"/>




</RelativeLayout>