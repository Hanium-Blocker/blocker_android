<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <TextView
        android:id="@+id/turnout_score_item_name"
        android:text="1.문재인"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/turnout_score_item_progress"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        app:progress_reached_bar_height="5dp"
        app:progress_max="100"
        app:progress_current="20"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_toRightOf="@id/turnout_score_item_name"/>


</RelativeLayout>