<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_logo_image"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/idtext"
        android:layout_below="@+id/login_logo_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="ID"/>
    <EditText
        android:id="@+id/login_id"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/login_logo_image"
        android:layout_toRightOf="@id/idtext"
        android:textSize="14sp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:paddingLeft="20dp"
        android:background="#dcdcdc"
        android:hint="아이디를 입력하세요"/>

    <TextView
        android:id="@+id/pwtext"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/idtext"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="PW"/>

    <EditText
        android:id="@+id/login_pw"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/login_id"
        android:layout_toRightOf="@id/pwtext"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="#dcdcdc"
        android:password="true"
        android:hint="패스워드를 입력하세요"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#dcdcdc"
        android:text="로그인"
        android:layout_below="@id/pwtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/login_signup_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#dcdcdc"
        android:text="회원가입"
        android:layout_below="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>